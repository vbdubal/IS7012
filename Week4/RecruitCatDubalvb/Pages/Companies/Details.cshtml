@page
@model RecruitCatDubalvb.Pages.Companies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Company Details</h1>

<div>
    <h4>Company</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Optionalstartdate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Optionalstartdate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MiniSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MiniSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MaxSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MaxSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.PositionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.PositionName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.EmployeeCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.EmployeeCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyStart)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyStart)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Industry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Industry.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Jobtitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Jobtitle.Id)
        </dd>
    </dl>
</div>

<div>
    @if (Model.Company.Candidates == null || Model.Company.Candidates.Count == 0)
    {
        <div >
            <h4><i>Null Candidate<i></i></h4>
            <p>Currently there is no candidate in the company</p>
        </div>
    }
    else
    {


        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Candidate First Name</th>
                    <th>Candidate Last Name</th>
                    <th>Job Title</th>
                    <th>Industry</th>
                    <th>Company</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c2 in Model.Company.Candidates)
                {
                <tr>
                    <td>@c2.FirstName</td>
                    <td>@c2.LastName</td>
                    <td>@c2.JobTitle.Title</td>
                    <td>@c2.Industry.Name</td>
                    <td>@c2.Company.Name</td>

                    <td><a href="/Candidates/Details?id=@c2.Id">Details</a>
                </tr>
                }
            </tbody>
        </table>
    }
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Company.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
